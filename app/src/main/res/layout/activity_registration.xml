<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sada.blight.RegistrationActivity">

    <Button
        android:id="@+id/bRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_login"
        android:padding="10dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Vellore"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/bAddImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:contentDescription="profileImage"
                android:elevation="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default"
                android:tint="#fff59c" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#eee" />

            <View
                android:layout_width="300dp"
                android:layout_height="1.5dp"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#eee" />

            <View
                android:layout_width="300dp"
                android:layout_height="1.5dp"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/etBloodgroup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_bloodgroup"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Bloodgroup"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#eee" />

            <View
                android:layout_width="300dp"
                android:layout_height="1.5dp"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/etContact"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_contact"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Contact No"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#eee" />

            <View
                android:layout_width="300dp"
                android:layout_height="1.5dp"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/etEmergencyContact"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_contact"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Emergency Contact No"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#eee" />

            <View
                android:layout_width="300dp"
                android:layout_height="1.5dp"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#eee" />

            <View
                android:layout_width="300dp"
                android:layout_height="1.5dp"
                android:background="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
